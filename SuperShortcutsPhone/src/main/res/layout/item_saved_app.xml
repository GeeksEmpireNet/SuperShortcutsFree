<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/items"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/app_shortcut_whole"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iconItem"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:background="@drawable/app_shortcut_icon"
            android:foregroundGravity="center"
            android:padding="8dp"
            android:src="@drawable/ic_launcher" />

        <Button
            android:id="@+id/deleteItem"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_cancel_stable_light" />

        <TextView
            android:id="@+id/itemAppName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/iconItem"
            android:layout_toEndOf="@id/deleteItem"
            android:gravity="center"
            android:padding="6dp"
            android:shadowColor="@color/default_color_darker"
            android:shadowRadius="19"
            android:text="@string/app_name"
            android:textColor="@color/light"
            android:textSize="17sp" />
    </RelativeLayout>
</RelativeLayout>
